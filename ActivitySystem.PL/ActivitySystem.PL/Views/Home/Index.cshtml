@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="slideshow m-4 col">
        <div id="carouselExample" class="carousel slide">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/img/event1.jpeg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/img/event2.jpeg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/img/event3.jpeg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="col m-5">
        @*<h3 class="mt-5 text-center">@Localizer["title"]</h3>*@
        <h4 class="text-center">@Localizer["subtitle"]</h4>
        <p class="text-center">@Localizer["vision"]</p>
        <h4 class="text-center">@Localizer["subtitle2"]</h4>
        <p class="text-center">@Localizer["mission"]</p>

    </div>
</div>

