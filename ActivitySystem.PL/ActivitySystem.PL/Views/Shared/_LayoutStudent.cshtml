<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*<title>@ViewBag.Title</title>*@
    <title>@ViewData["Title"] - ActivitySystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ActivitySystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @{
            var currentCulture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
            var newCulture = currentCulture == "en" ? "ar" : "en"; // Toggle between "en-US" and "ar-SA"
        }
        <div class="row m-4 justify-content-between">
            <img id="imgLogo" src="~/img/SQU.png" alt="SQU Web Site" class="col-2 ">


            <a asp-controller="Language" asp-action="SwitchLanguage" asp-route-culture="@newCulture" asp-route-returnUrl="@Context.Request.Path" id="languageSwitchButton" class="btn button fs-6 col-1 mt-3" style="height: 2.5rem;">
                @if (ViewBag.CurrentCultureName == "en")
                {
                    <span> Arabic</span>
                }
                else
                {
                    <span> English</span>
                }
            </a>

        </div>
        

        <nav class="navheader navbar navbar-expand-lg w-100 p-3">

            <div class="container-fluid">
                <!-- <a class="navbar-brand" href="#">Navbar</a> -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse px-3 navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active text-light px-5 fs-6" aria-current="page"
                               asp-controller="Home" asp-action="Index">@Localizer["About"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-light px-5 fs-6" aria-current="page"
                               asp-controller="Home" asp-action="Groups">@Localizer["Groups"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-light px-5 fs-6" aria-current="page"
                               asp-controller="Home" asp-action="Events">@Localizer["Event"]</a>
                        </li>

                    </ul>
                    <div class="d-flex">
                        <ul class="nav-item dropdown">
                            <li class="mt-3">
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Username
                                </a>

                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item fs-6 text" asp-controller="Student" asp-action="Myprofile">
                                            @Localizer["MyProfile"]
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item fs-6 text " asp-controller="Student" asp-action="MyGroups" asp-route-id="1">
                                            @Localizer["MyGroups"]
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item fs-6 text" asp-controller="Events" asp-action="AddEvents">
                                            @Localizer["AddEvent"]
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item fs-6 text" asp-controller="Home" asp-action="Index">@Localizer["Logout"]</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>


    <script src="~/lib/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

