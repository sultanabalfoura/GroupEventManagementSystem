<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ActivitySystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ActivitySystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

        @{
            var currentCulture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
            var newCulture = currentCulture == "en" ? "ar" : "en"; // Toggle between "en-US" and "ar-SA"
        }
        <div class="row m-4 justify-content-between">
            <img id="imgLogo" src="~/img/SQU.png" alt="SQU Web Site" class="col-2 ">


            <a asp-controller="Language" asp-action="SwitchLanguage" asp-route-culture="@newCulture" asp-route-returnUrl="@Context.Request.Path" id="languageSwitchButton" class="btn button fs-6 col-1 mt-3" style="height: 2.5rem;">
                @if (ViewBag.CurrentCultureName == "en")
                {
                    <span> Arabic</span>
                }
                else
                {
                    <span> English</span>
                }
            </a>

        </div>

        <nav class="navheader navbar navbar-expand-lg w-100 p-3">

            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active text-light px-5 fs-6" aria-current="page"
                               asp-controller="Home" asp-action="Index">@Localizer["About"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-light px-5 fs-6" aria-current="page"
                               asp-controller="Home" asp-action="Groups">@Localizer["Groups"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-light px-5 fs-6" aria-current="page"
                               asp-controller="Home" asp-action="Events">@Localizer["Event"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-light px-5 fs-6" aria-current="page"
                               asp-controller="Student" asp-action="Myprofile" asp-route-id="1">Student</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-light px-5 fs-6" aria-current="page"
                               asp-controller="Group" asp-action="AddGroups" asp-route-id="1">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="d-flex  py-3 my-4 border-top" style="height: 10rem;">
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

